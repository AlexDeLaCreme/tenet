<h1>All canons</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @canons.each do |canon| %>
  <tr>
    <td><%= canon.body %></td>
    <td><% if canon.archived %><%= link_to 'Unarchive', unarchive_path(canon), class: 'btn' %><% end %></td>
    <td><%= link_to 'Show', canon, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_canon_path(canon), class: 'btn' %></td>
    <td><%= link_to 'Destroy', canon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
  </tr>
<% end %>
</table>

